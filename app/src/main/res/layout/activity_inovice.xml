<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="proj.isd2016.cccu.dvdonlinestore.InoviceActivity">

    <LinearLayout
        android:background="#009900"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:text="$497"
            android:id="@+id/tv_due" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:text="BALANCE DUE"
            android:id="@+id/textView3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 - 01 - 2015"
            android:textColor="#000000"
            android:textSize="13dp"
            android:id="@+id/tv_due_date" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Inovice Date"
            android:textColor="#009900"
            android:id="@+id/textView12"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:textColor="#009900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items"
            android:id="@+id/textView2"
            android:layout_weight="0.85" />

        <TextView
            android:gravity="center_vertical|right"
            android:textColor="#009900"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:id="@+id/textView13"
            android:layout_weight="0.15" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:dividerHeight="1dp"
        android:divider="@drawable/list_divider"
        android:id="@+id/invoice_list"
         />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:weightSum="1"
        android:id="@+id/lay">

        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:gravity="right"
                android:layout_width = "105dp"
                android:layout_height="wrap_content"
                android:text="SubTotal"
                android:textColor="#009900"
                android:textSize="13dp"
                android:id="@+id/textView16" />

            <TextView
                android:gravity="right"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="$1789.00"
                android:id="@+id/subtotal_tv" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:gravity="right"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Shipping Charges"
                android:textColor="#009900"
                android:textSize="13dp"
                android:id="@+id/textView19" />

            <TextView
                android:gravity="right"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="$0.0"
                android:id="@+id/ship_charge" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/la">

            <TextView
                android:gravity="right"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="#009900"
                android:textSize="13dp"
                android:id="@+id/textView17" />

            <TextView
                android:gravity="right"
                android:textColor="#000000"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="$1800.00"
                android:id="@+id/total" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
