<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202020"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="proj.isd2016.cccu.dvdonlinestore.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="473dp"

        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="212dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2"
            android:src="@drawable/appicon"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="User Name"
            android:layout_marginTop="30dp"
            android:id="@+id/editText_user_name"
            android:background="@drawable/rect_edit_shape"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:background="@drawable/rect_edit_shape"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/editText_user_password"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Log IN"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_login" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up for TaoMoive"
            android:gravity="bottom"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_signUP"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
