<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="proj.isd2016.cccu.dvdonlinestore.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="212dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2"
            android:src="@drawable/appicon"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover shows you&apos;ll love"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03" />

        <EditText

            android:paddingTop="10dp"
            android:paddingLeft="2dp"
            android:paddingBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Username"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:id="@+id/editText_user_name"
            android:textColorHint="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:ems="10"
            android:background="@drawable/login_page_box"
            />

        <EditText

            android:textColor="#FFFFFF"
            android:paddingTop="10dp"
            android:drawablePadding="10dip"

            android:paddingLeft="2dp"
            android:paddingBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:background="@drawable/login_page_box"
            android:hint="Password"
            android:textColorHint="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:ems="10"

            android:id="@+id/editText_user_password" />
        <!-- android:scaleType="fitXY"
   android:drawablePadding="10dip"
   android:drawableLeft="@drawable/edittext_icon_password"!
   -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:background="#F7B020"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_login" />

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center|bottom"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"

      >

        <TextView
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have a account yet? "
            android:textColor="#A0A0A0"
            android:id="@+id/textView11" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up."
            android:textColor="#FFFFFF"
            android:id="@+id/tv_signUP"
           />
    </LinearLayout>

</LinearLayout>
